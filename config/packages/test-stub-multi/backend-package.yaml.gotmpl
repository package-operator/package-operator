apiVersion: package-operator.run/v1alpha1
{{- if eq .package.metadata.namespace ""}}
kind: ClusterPackage
{{- else }}
kind: Package
{{- end}}
metadata:
  name: "{{.package.metadata.name}}-backend"
  annotations:
    package-operator.run/phase: deploy-backend
spec:
  image: {{ .config.testStubMultiPackageImage }}
  component: backend
  config:
{{- if eq .package.metadata.namespace ""}}
    namespace: "{{.package.metadata.name}}"
{{- end}}
    testStubImage: {{ .config.testStubImage }}
